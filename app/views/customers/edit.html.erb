<h1>Edit this customer:</h1>

<%= form_for(@customer) do |f| %>

	<%= f.label :first_name, "Change first name:" %>
	<%= f.text_field :first_name %>
	<br>
	<%= f.label :last_name, "Change last name:" %>
	<%= f.text_field :last_name %>
	<br>
	<%= f.label :table_number, "Change table number:" %>
	<%= f.text_field :table_number %>
	<br>
	<%= f.submit "Go go Greasy Spoon!" %>

<% end %>

<br>
<%= link_to "Delete customer", @customer, method: :delete, data: { confirm: "You sure?" } %>